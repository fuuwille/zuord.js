{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "zuord": ["libraries/zuord/src/api"],
      "@zuord/type": ["packages/type/src"],
      "@zuord/util": ["packages/util/src"],
      "@zuord/trait": ["packages/trait/src"],
      "@zuord/produce": ["packages/produce/src"],
    }
  }
}