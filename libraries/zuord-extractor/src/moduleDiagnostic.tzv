import { Node } from "ts-morph";
import { ModuleDiagnosticLevel } from "./moduleDiagnostic";

export const info = (node: Node, message: string): ZSchema.Info => {
    return { node, message, level: ModuleDiagnosticLevel.Info };
}

export const warning = (node: Node, message: string): ZSchema.Warning => {
    return { node, message, level: ModuleDiagnosticLevel.Warning };
}

export const error = (node: Node, message: string): ZSchema.Error => {
    return { node, message, level: ModuleDiagnosticLevel.Error };
}

//

export const buildInDiagnostics = {
    noReturnType: (node: Node): ZSchema.Error => {
        return error(node, "Return type must be specified");
    }
}